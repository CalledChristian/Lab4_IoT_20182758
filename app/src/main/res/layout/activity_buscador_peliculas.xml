<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscadorPeliculasActivity">


    <View
        android:id="@+id/view1"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:background="#3F51B5"
        android:backgroundTint="#FF5722"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:hint="Pelicula" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1" />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            app:layout_constraintTop_toBottomOf="@id/view2"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/textdirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:hint="Director"
            android:ems="8"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />


        <TextView
            android:id="@+id/campo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actores:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/campo2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Actores"
            android:textColor="@color/black"
            android:ems="8"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/campo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha Estreno"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/campo3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="fecha estreno"
            android:ems="8"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/campo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generos"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/campo4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="generos"
            android:ems="8"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/campo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escritores"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <TextView
            android:id="@+id/campo5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="escritores"
            android:ems="8"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintVertical_bias="0.9"
            app:layout_constraintBottom_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="@id/view3"
            app:layout_constraintStart_toStartOf="@id/view3"
            app:layout_constraintTop_toTopOf="@id/view3" />

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view3" />


        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            app:layout_constraintTop_toBottomOf="@id/view4"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintHorizontal_bias="0.1"
            android:text="Trama\n de la\n Película"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="@id/view5"
            app:layout_constraintStart_toStartOf="@id/view5"
            app:layout_constraintTop_toTopOf="@id/view5" />


    <ScrollView
        android:layout_width="230dp"
        android:layout_height="115dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintEnd_toEndOf="@id/view5"
        app:layout_constraintStart_toStartOf="@id/view5"
        app:layout_constraintTop_toTopOf="@id/view5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TRAMA"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <View
            android:id="@+id/view6"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view5" />

        <TextView
            android:id="@+id/TextRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:text="Ratings de la Película (Fuente/Valoración)"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/view6" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/view6"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        </LinearLayout>




    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estas conforme con la\n Información Brindada"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_marginTop="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view6"
        />

    <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:backgroundTint="#4CAF50"
            android:text="Regresar"
            android:onClick="irVistaPrincipal"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view6" />


</androidx.constraintlayout.widget.ConstraintLayout>